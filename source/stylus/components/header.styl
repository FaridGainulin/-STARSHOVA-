.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    color: #fff
    padding-top 10px
    +above($breakpoints.sm)
      padding-top 15px
    +above($breakpoints.md)
      padding-top 20px
    +above($breakpoints.xxl)
      padding-top 22px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block
      flex-basis: 35%

  &__logo
    width 130px
    height: auto
    +above($breakpoints.sm)
      width 150px
    +above($breakpoints.md)
      width 180px
    +above($breakpoints.xxl)
      width 213px

  &__btn-wrapper
    +above($breakpoints.sm)
      flex-basis: 35%
      display: flex
      justify-content flex-end

  &__brand-mobile
    text-align: center
    padding 7px 0
    margin-top 5px
    background-color #996e46
    color: #fff
    +above($breakpoints.sm)
      display: none
