.about-section
  // background-image: url('../images/about-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #FFFFFF

  &__container
    position relative
    padding 20px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 40px 0
    +above($breakpoints.md)
      padding 70px 0 60px 0
    +above($breakpoints.xxl)
      padding 100px 0 106px 0

  &__title
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 35px 0
    +above($breakpoints.xxl)
      padding 0 0 40px 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      gap: 30px
    +above($breakpoints.md)
      gap: 50px
    +above($breakpoints.xxl)
      gap: 120px

  &__owner-img
    width 100%
    height: auto
    +above($breakpoints.sm)
      width 260px
    +above($breakpoints.md)
      width 340px
    +above($breakpoints.xxl)
      width 380px

  &__owner-name
    display: flex
    justify-content center
    align-items: center
    border-radius: 25px
    border: 1px solid #996E46
    width 200px
    height: 30px
    margin 10px auto 5px
    +above($breakpoints.sm)
      margin 10px 0 6px 0
      width 200px
      height: 30px
    +above($breakpoints.md)
      margin 25px 0 6px 0
      width 220px
      height: 35px
    +above($breakpoints.xxl)
      margin 30px 0 6px 0
      width 230px
      height: 40px

  &__owner-founder
    color: #747474
    +above($breakpoints.sm)
      padding-left 10px
    +above($breakpoints.md)
      padding-left 15px
    +above($breakpoints.xxl)
      padding-left 18px

  &__block-video
    margin-top 15px
    cursor pointer
    +above($breakpoints.sm)
      margin-top 30px
    +above($breakpoints.md)
      margin-top 50px
    +above($breakpoints.xxl)
      margin-top 93px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin-top 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 50px
      margin-top 30px
    +above($breakpoints.md)
      gap: 120px
      margin-top 50px
    +above($breakpoints.xxl)
      margin-top 80px
      gap: 138px

  &__form
    width 280px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      width 580px
      flex-direction: row
      flex-wrap: wrap
      gap: 8px
    +above($breakpoints.md)
      gap: 10px
    +above($breakpoints.xxl)
      gap: 14px 12px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 196px !important
      +above($breakpoints.md)
        width 245px !important
      +above($breakpoints.xxl)
        width 284px !important
    & > :first-child,
    & > :last-child
      width 280px !important
      +above($breakpoints.sm)
        width 400px !important
      +above($breakpoints.md)
        width 500px !important
      +above($breakpoints.xxl)
        width 580px !important
