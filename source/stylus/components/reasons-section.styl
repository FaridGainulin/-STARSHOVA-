.reasons-section
  background-color #fff

  &__container
    position relative
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 100px 0

  &__title
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 60px
    +above($breakpoints.xxl)
      padding-bottom 80px

  &__box
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 45px
    +above($breakpoints.md)
      gap: 70px
    +above($breakpoints.xxl)
      gap: 120px

  &__img
    width 280px
    height: auto
    +above($breakpoints.sm)
      width 245px
    +above($breakpoints.md)
      width 325px
    +above($breakpoints.xxl)
      width 380px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 15px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 40px

  &__card
    width 300px !important
    display: flex
    flex-direction: column
    gap: 10px
    +above($breakpoints.sm)
      width max-content !important
