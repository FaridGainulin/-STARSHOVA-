.steps-section
  // background-image: url('../images/steps-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #F1F1F1

  &__container
    position relative
    padding 20px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 60px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 60px 0
    +above($breakpoints.xxl)
      padding 100px 0 88px 0

  &__title
    padding-bottom: 15px
    +above($breakpoints.sm)
      padding-bottom 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      margin-top -10px
      gap: 35px
      flex-direction: row-reverse
      align-items: flex-end
    +above($breakpoints.md)
      margin-top -10px
      gap: 90px
    +above($breakpoints.xxl)
      margin-top -10px
      gap: 50px

  &__cards
    +above($breakpoints.sm)
      width 370px
      display: flex
      flex-wrap: wrap
      justify-content flex-end
      gap: 15px 10px
    +above($breakpoints.md)
      width 460px
      gap: 25px 30px
    +above($breakpoints.xxl)
      width 610px
      gap: 44px 50px

  &__card
    width 280px !important
    height: 55px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    color: #222222
    +above($breakpoints.sm)
      gap: 10px
      align-items: flex-start
      width 165px !important
      height: 85px
    +above($breakpoints.md)
      gap: 12px
      width 215px !important
      height: 108px
    +above($breakpoints.xxl)
      gap: 14px
      width 245px !important
      height: 120px

  &__card-title
    width 150px
    height: 25px
    border-radius: 25px
    border: 1px solid #996E46
    display: flex
    justify-content center
    align-items: center
    color: #996E46
    +above($breakpoints.sm)
      width 110px
      height: 30px
    +above($breakpoints.md)
      width 120px
      height: 35px
    +above($breakpoints.xxl)
      width 135px
      height: 40px

  &__img
    width 280px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      margin-bottom 15px
      width 300px
    +above($breakpoints.md)
      margin-bottom 22px
      width 390px
    +above($breakpoints.xxl)
      margin-bottom 22px
      width 480px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    margin-top 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      justify-content space-between
      margin-top 15px
    +above($breakpoints.md)
      margin-top 50px
    +above($breakpoints.xxl)
      margin-top 85px

  &__btn
    width 280px !important
    +above($breakpoints.sm)
      margin-bottom 8px
      width 260px !important
    +above($breakpoints.md)
      width 360px !important
    +above($breakpoints.xxl)
      width 380px !important
