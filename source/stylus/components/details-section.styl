.details-section
  // background-image: url('../images/details-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #F1F1F1

  &__container
    position relative
    padding 20px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 60px 0 60px 0
    +above($breakpoints.xxl)
      padding 80px 0 84px 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 50px
    +above($breakpoints.md)
      gap: 120px
    +above($breakpoints.xxl)
      gap: 183px

  &__title
    padding 0 0 7px 0
    +above($breakpoints.sm)
      padding 0 0 20px 0
    +above($breakpoints.md)
      padding 0 0 25px 0
    +above($breakpoints.xxl)
      padding 0 0 29px 0

  &__form
    width 280px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 8px
    +above($breakpoints.md)
      gap: 10px
      width 300px
    +above($breakpoints.xxl)
      gap: 14px
      width 310px
